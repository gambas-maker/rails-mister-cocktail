<h1>Enjoy the <%=  @cocktail.name%> </h1>

<% @cocktail.doses.each do |dose| %>
<p> <%= dose.description %></p>
<p><%= dose.ingredient.name %></p>

  <%= link_to "Delete #{dose.description}",
    dose_path(dose),
    method: :delete,
    data: { confirm: "You sure?" } %>
<% end %>

<%= link_to "Create ta dose", new_cocktail_dose_path(@cocktail)%>

<p> <%= link_to "Voir tous les cocktails", cocktails_path %> </p>
